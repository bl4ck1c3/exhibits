<%= bootstrap_form_for(PurlResource.new, url: purl_resources_path(exhibit_id: current_exhibit), layout: :horizontal, label_col: 'col-md-2', control_col: 'col-sm-6 col-md-6') do |f| %>
  <%= f.text_area :data, rows: 10, value: PurlResource.druids(current_exhibit).join("\n")  %>
  <div class="form-actions">
    <div class="primary-actions">
      <%= cancel_link "", :back, class: 'btn btn-default' %>
      <%= f.submit t('.add_item'), class: 'btn btn-primary' %>
    </div>
  </div>
<% end if can? :manage, PurlResource %>
